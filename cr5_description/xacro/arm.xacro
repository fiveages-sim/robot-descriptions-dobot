<?xml version="1.0"?>
<robot name="cr5_robot" xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:property name="PI" value="3.1415926535897931"/>
    <xacro:property name="DEG2RAD" value="0.017453292519943295"/>  <!-- PI/180 -->
    <xacro:property name="MM2M" value="0.001"/>  <!-- 毫米转米 -->
    
    <xacro:macro name="CR5" params="name collider:=convex dh_params">

        <xacro:property name="prefix" value="${name + '_' if name else ''}"/>
        
        <!-- 
            从DH参数计算各关节的xyz和rpy值（单位转换：毫米->米，度->弧度）
            标准DH参数映射规则（基于执行器轴方向）：
            - a (link length): 沿着x轴的距离 → xyz的x分量
            - d (link offset): 沿着z轴的距离 → xyz的z分量  
            - alpha (twist): 绕x轴的旋转角度 → rpy的x分量（roll）
            - theta: 绕z轴的旋转（关节变量，在URDF中通过axis定义）
        -->
        
        <!-- joint1: 标准DH转换 - a=0, d=147mm, alpha=0 -->
        <xacro:property name="j1_a_m" value="${dh_params['joint1']['a'] * MM2M}"/>
        <xacro:property name="j1_d_m" value="${dh_params['joint1']['d'] * MM2M}"/>
        <xacro:property name="j1_alpha_rad" value="${dh_params['joint1']['alpha'] * DEG2RAD}"/>
        <xacro:property name="j1_xyz" value="${str(j1_a_m) + ' ' + str(0) + ' ' + str(j1_d_m)}"/>
        <xacro:property name="j1_rpy" value="${str(j1_alpha_rad) + ' ' + str(0) + ' ' + str(0)}"/>
        
        <!-- joint2: alpha映射到rpy的x（roll），theta的固定偏移π/2映射到rpy的y（pitch） -->
        <xacro:property name="j2_a_m" value="${dh_params['joint2']['a'] * MM2M}"/>
        <xacro:property name="j2_d_m" value="${dh_params['joint2']['d'] * MM2M}"/>
        <xacro:property name="j2_alpha_rad" value="${dh_params['joint2']['alpha'] * DEG2RAD}"/>
        <xacro:property name="j2_xyz" value="${str(j2_a_m) + ' ' + str(0) + ' ' + str(j2_d_m)}"/>
        <!-- alpha -> rpy x (roll), theta的固定偏移π/2 -> rpy y (pitch) -->
        <xacro:property name="j2_rpy" value="${str(j2_alpha_rad) + ' ' + str(PI/2) + ' ' + str(0)}"/>
        
        <!-- joint3: 标准DH转换 - a=-427.567mm, d=0, alpha≈0 -->
        <xacro:property name="j3_a_m" value="${dh_params['joint3']['a'] * MM2M}"/>
        <xacro:property name="j3_d_m" value="${dh_params['joint3']['d'] * MM2M}"/>
        <xacro:property name="j3_alpha_rad" value="${dh_params['joint3']['alpha'] * DEG2RAD}"/>
        <xacro:property name="j3_xyz" value="${str(j3_a_m) + ' ' + str(0) + ' ' + str(j3_d_m)}"/>
        <xacro:property name="j3_rpy" value="${str(j3_alpha_rad) + ' ' + str(0) + ' ' + str(0)}"/>
        
        <!-- joint4: alpha映射到rpy的x（roll），theta的固定偏移-π/2映射到rpy的z（yaw） -->
        <xacro:property name="j4_a_m" value="${dh_params['joint4']['a'] * MM2M}"/>
        <xacro:property name="j4_d_m" value="${dh_params['joint4']['d'] * MM2M}"/>
        <xacro:property name="j4_alpha_rad" value="${dh_params['joint4']['alpha'] * DEG2RAD}"/>
        <xacro:property name="j4_xyz" value="${str(j4_a_m) + ' ' + str(0) + ' ' + str(j4_d_m)}"/>
        <!-- alpha -> rpy x (roll), theta的固定偏移-π/2 -> rpy z (yaw) -->
        <xacro:property name="j4_rpy" value="${str(j4_alpha_rad) + ' ' + str(0) + ' ' + str(-PI/2)}"/>
        
        <!-- joint5: 由于坐标系旋转，d映射到y负方向，alpha仍为roll -->
        <xacro:property name="j5_a_m" value="${dh_params['joint5']['a'] * MM2M}"/>
        <xacro:property name="j5_d_m" value="${dh_params['joint5']['d'] * MM2M}"/>
        <xacro:property name="j5_alpha_rad" value="${dh_params['joint5']['alpha'] * DEG2RAD}"/>
        <!-- 注意：由于坐标系旋转，d映射到y负方向而不是z方向 -->
        <xacro:property name="j5_xyz" value="${str(j5_a_m) + ' ' + str(-j5_d_m) + ' ' + str(0)}"/>
        <xacro:property name="j5_rpy" value="${str(j5_alpha_rad) + ' ' + str(0) + ' ' + str(0)}"/>
        
        <!-- joint6: 由于坐标系旋转，d映射到y正方向，alpha仍为roll -->
        <xacro:property name="j6_a_m" value="${dh_params['joint6']['a'] * MM2M}"/>
        <xacro:property name="j6_d_m" value="${dh_params['joint6']['d'] * MM2M}"/>
        <xacro:property name="j6_alpha_rad" value="${dh_params['joint6']['alpha'] * DEG2RAD}"/>
        <!-- 注意：由于坐标系旋转，d映射到y正方向而不是z方向 -->
        <xacro:property name="j6_xyz" value="${str(j6_a_m) + ' ' + str(j6_d_m) + ' ' + str(0)}"/>
        <xacro:property name="j6_rpy" value="${str(j6_alpha_rad) + ' ' + str(0) + ' ' + str(0)}"/>
        
        <link name="${prefix}base_link">
            <inertial>
                <origin xyz="-8.0961E-06 0.0019103 0.028995"/>
                <mass value="0.90882"/>
                <inertia ixx="0.0014545" ixy="4.2968E-08" ixz="-1.8199E-07" iyy="0.001345" iyz="-6.243E-06"
                         izz="0.002155"/>
            </inertial>
            <visual>
                <geometry>
                    <mesh filename="file://$(find cr5_description)/meshes/visual/base_link.obj"/>
                </geometry>
            </visual>
            <xacro:if value="${collider == 'convex'}">
                <collision>
                    <geometry>
                        <mesh filename="file://$(find cr5_description)/meshes/collision/base_link.stl"/>
                    </geometry>
                </collision>
            </xacro:if>
            <xacro:if value="${collider == 'simple'}">
                <collision>
                    <origin xyz="0 0 0.05"/>
                    <geometry>
                        <cylinder length="0.1" radius="0.1"/>
                    </geometry>
                </collision>
                <xacro:if value="${prefix == ''}">
                    <collision>
                        <origin xyz="0 0 -0.025"/>
                        <geometry>
                            <box size="1.5 1.5 0.05"/>
                        </geometry>
                    </collision>
                </xacro:if>
            </xacro:if>
        </link>

        <link name="${prefix}Link1">
            <inertial>
                <origin xyz="-8.7268E-07 -0.0032576 -0.0076748"/>
                <mass value="1.6123"/>
                <inertia ixx="0.0029122" ixy="5.7387E-09" ixz="1.9945E-08" iyy="0.0028191" iyz="0.00044094"
                         izz="0.0032836"/>
            </inertial>
            <visual>
                <geometry>
                    <mesh filename="file://$(find cr5_description)/meshes/visual/Link1.obj"/>
                </geometry>
            </visual>
            <xacro:if value="${collider == 'convex'}">
                <collision>
                    <geometry>
                        <mesh filename="file://$(find cr5_description)/meshes/collision/Link1_0.stl"/>
                    </geometry>
                </collision>
                <collision>
                    <geometry>
                        <mesh filename="file://$(find cr5_description)/meshes/collision/Link1_1.stl"/>
                    </geometry>
                </collision>
            </xacro:if>
            <xacro:if value="${collider == 'simple'}">
                <collision>
                    <geometry>
                        <cylinder length="0.17" radius="0.08"/>
                    </geometry>
                </collision>
            </xacro:if>
        </link>

        <joint name="${prefix}joint1" type="revolute">
            <origin xyz="${j1_xyz}" rpy="${j1_rpy}"/>
            <parent link="${prefix}base_link"/>
            <child link="${prefix}Link1"/>
            <axis xyz="0 0 1"/>
            <limit lower="${-2*PI}" upper="${2*PI}" effort="300" velocity="${PI}"/>
        </joint>

        <link name="${prefix}Link2">
            <inertial>
                <origin xyz="-0.21351 -1.3842E-06 0.14252"/>
                <mass value="5.5186"/>
                <inertia ixx="0.0085919" ixy="7.5552E-07" ixz="-7.8922E-07" iyy="0.027553" iyz="1.4629E-07"
                         izz="0.028294"/>
            </inertial>
            <visual>
                <geometry>
                    <mesh filename="file://$(find cr5_description)/meshes/visual/Link2.obj"/>
                </geometry>
            </visual>
            <xacro:if value="${collider == 'convex'}">
                <collision>
                    <geometry>
                        <mesh filename="file://$(find cr5_description)/meshes/collision/Link2_0.stl"/>
                    </geometry>
                </collision>
                <collision>
                    <geometry>
                        <mesh filename="file://$(find cr5_description)/meshes/collision/Link2_1.stl"/>
                    </geometry>
                </collision>
                <collision>
                    <geometry>
                        <mesh filename="file://$(find cr5_description)/meshes/collision/Link2_2.stl"/>
                    </geometry>
                </collision>
            </xacro:if>
            <xacro:if value="${collider == 'simple'}">
                <collision>
                    <origin rpy="0 0 0" xyz="0 0 0.145"/>
                    <geometry>
                        <cylinder length="0.18" radius="0.07"/>
                    </geometry>
                </collision>
                <collision>
                    <origin rpy="0 ${PI/2} 0" xyz="-0.2 0 0.15"/>
                    <geometry>
                        <cylinder length="0.43" radius="0.065"/>
                    </geometry>
                </collision>
                <collision>
                    <origin xyz="-0.43 0 0.145"/>
                    <geometry>
                        <cylinder length="0.18" radius="0.07"/>
                    </geometry>
                </collision>
            </xacro:if>
        </link>

        <joint name="${prefix}joint2" type="revolute">
            <origin xyz="${j2_xyz}" rpy="${j2_rpy}"/>
            <parent link="${prefix}Link1"/>
            <child link="${prefix}Link2"/>
            <axis xyz="0 0 1"/>
            <limit lower="${-2*PI}" upper="${2*PI}" effort="300" velocity="${PI}"/>
        </joint>

        <link name="${prefix}Link3">
            <inertial>
                <origin xyz="-0.15231 -1.4079E-07 0.022693"/>
                <mass value="2.8536"/>
                <inertia ixx="0.0032608" ixy="-3.2147E-10" ixz="0.00012363" iyy="0.0092967" iyz="2.9478E-10"
                         izz="0.0095552"/>
            </inertial>
            <visual>
                <geometry>
                    <mesh filename="file://$(find cr5_description)/meshes/visual/Link3.obj"/>
                </geometry>
            </visual>
            <xacro:if value="${collider == 'convex'}">
                <collision>
                    <geometry>
                        <mesh filename="file://$(find cr5_description)/meshes/collision/Link3_0.stl"/>
                    </geometry>
                </collision>
                <collision>
                    <geometry>
                        <mesh filename="file://$(find cr5_description)/meshes/collision/Link3_1.stl"/>
                    </geometry>
                </collision>
                <collision>
                    <geometry>
                        <mesh filename="file://$(find cr5_description)/meshes/collision/Link3_2.stl"/>
                    </geometry>
                </collision>
            </xacro:if>
            <xacro:if value="${collider == 'simple'}">
                <collision>
                    <origin xyz="0 0 0.02"/>
                    <geometry>
                        <cylinder length="0.15" radius="0.07"/>
                    </geometry>
                </collision>
                <collision>
                    <origin rpy="0 ${PI/2} 0" xyz="-0.2 0 0.03"/>
                    <geometry>
                        <cylinder length="0.26" radius="0.05"/>
                    </geometry>
                </collision>
                <collision>
                    <origin xyz="-0.355 0 0.02"/>
                    <geometry>
                        <cylinder length="0.15" radius="0.05"/>
                    </geometry>
                </collision>
            </xacro:if>
        </link>

        <joint name="${prefix}joint3" type="revolute">
            <origin xyz="${j3_xyz}" rpy="${j3_rpy}"/>
            <parent link="${prefix}Link2"/>
            <child link="${prefix}Link3"/>
            <axis xyz="0 0 1"/>
            <limit lower="-2.7925" upper="2.7925" effort="300" velocity="3.14159"/>
        </joint>

        <link name="${prefix}Link4">
            <inertial>
                <origin xyz="-3.2386E-07 -0.002077 -0.0015548"/>
                <mass value="0.67058"/>
                <inertia ixx="0.00066939" ixy="4.1975E-10" ixz="-1.0734E-08" iyy="0.00065424" iyz="0.00011081"
                         izz="0.00065365"/>
            </inertial>
            <visual>
                <geometry>
                    <mesh filename="file://$(find cr5_description)/meshes/visual/Link4.obj"/>
                </geometry>
            </visual>
            <xacro:if value="${collider == 'convex'}">
                <collision>
                    <geometry>
                        <mesh filename="file://$(find cr5_description)/meshes/collision/Link4.stl"/>
                    </geometry>
                </collision>
            </xacro:if>
            <xacro:if value="${collider == 'simple'}">
                <collision>
                    <origin rpy="${PI/2} 0 0"/>
                    <geometry>
                        <cylinder length="0.155" radius="0.055"/>
                    </geometry>
                </collision>
            </xacro:if>
        </link>

        <joint name="${prefix}joint4" type="revolute">
            <origin xyz="${j4_xyz}" rpy="${j4_rpy}"/>
            <parent link="${prefix}Link3"/>
            <child link="${prefix}Link4"/>
            <axis xyz="0 0 1"/>
            <limit lower="${-2*PI}" upper="${2*PI}" effort="300" velocity="${PI}"/>
        </joint>
        <link name="${prefix}Link5">
            <inertial>
                <origin xyz="-3.7738E-07 -0.0045777 -0.0012971"/>
                <mass value="0.7269"/>
                <inertia ixx="0.00073069" ixy="-5.7806E-09" ixz="6.7132E-09" iyy="0.00071195" iyz="-0.00011926"
                         izz="0.00071391"/>
            </inertial>
            <visual>
                <geometry>
                    <mesh filename="file://$(find cr5_description)/meshes/visual/Link5.obj"/>
                </geometry>
            </visual>
            <xacro:if value="${collider == 'convex'}">
                <collision>
                    <geometry>
                        <mesh filename="file://$(find cr5_description)/meshes/collision/Link5.stl"/>
                    </geometry>
                </collision>
            </xacro:if>
            <xacro:if value="${collider == 'simple'}">
                <collision>
                    <origin rpy="${PI/2} 0 0"/>
                    <geometry>
                        <cylinder length="0.18" radius="0.055"/>
                    </geometry>
                </collision>
            </xacro:if>
        </link>

        <joint name="${prefix}joint5" type="revolute">
            <origin xyz="${j5_xyz}" rpy="${j5_rpy}"/>
            <parent link="${prefix}Link4"/>
            <child link="${prefix}Link5"/>
            <axis xyz="0 0 1"/>
            <limit lower="${-2*PI}" upper="${2*PI}" effort="300" velocity="${PI}"/>
        </joint>

        <link name="${prefix}Link6">
            <inertial>
                <origin xyz="5.0777E-11 9.3774E-05 -0.019285"/>
                <mass value="0.15789"/>
                <inertia ixx="7.8045E-05" ixy="6.1582E-15" ixz="6.2471E-14" iyy="7.9168E-05" iyz="-1.3822E-07"
                         izz="0.00012951"/>
            </inertial>
            <visual>
                <geometry>
                    <mesh filename="file://$(find cr5_description)/meshes/visual/Link6.obj"/>
                </geometry>
            </visual>
            <xacro:if value="${collider == 'convex'}">
                <collision>
                    <geometry>
                        <mesh filename="file://$(find cr5_description)/meshes/collision/Link6.stl"/>
                    </geometry>
                </collision>
            </xacro:if>
            <xacro:if value="${collider == 'simple'}">
                <collision>
                    <origin xyz="0 0 0.1"/>
                    <geometry>
                        <box size="0.05 0.15 0.2"/>
                    </geometry>
                </collision>
            </xacro:if>
        </link>

        <joint name="${prefix}joint6" type="revolute">
            <origin xyz="${j6_xyz}" rpy="${j6_rpy}"/>
            <parent link="${prefix}Link5"/>
            <child link="${prefix}Link6"/>
            <axis xyz="0 0 1"/>
            <limit lower="${-2*PI}" upper="${2*PI}" effort="300" velocity="${PI}"/>
        </joint>
    </xacro:macro>
</robot>